  FMX.Effects, FMX.Objects, FMX.Controls.Presentation, FMX.Layouts, FMX.Edit,
  FMX.ListBox, FMX.Ani;

type
  TFBabyEdit = class(TFrame)
    Layout1: TLayout;
    MasterLayout: TLayout;
    btnActionSheet: TCircle;
    Layout4: TLayout;
    Rectangle3: TRectangle;
    Rectangle1: TRectangle;
